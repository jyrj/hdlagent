#!/bin/bash
f=$1

temp_file=$(mktemp log_check_verilog.XXXXXX)
if which slang >/dev/null; then
	slang ${f} 2>${temp_file}
	if [[ $? -ne 0 ]]; then
		cat ${temp_file}
	else
		echo "SUCCESS"
	fi
else
	yosys -p "logger -nowarn assigned; read_verilog -sv ${f};" &>${temp_file}
	if [[ $? -ne 0 ]]; then
		grep "Warning:" ${temp_file} | grep -Eiv "Suppress"
		if [[ $? -ne 0 ]]; then
			echo "SUCCESS"
		fi
	fi
fi

#rm tmp.check_verilog
